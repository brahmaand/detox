C_OPT = -O2 -Wall -g
L_OPT = 

CC = @CC@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
mandir = @mandir@

.c.o:
	${CC} -c ${C_OPT} $<

detoxOBJS = detox.o clean_string.o file.o
regressOBJS = regress.o clean_string.o

all: detox regress

detox: ${detoxOBJS}
	${CC} ${L_OPT} -o detox ${detoxOBJS}

regress: ${regressOBJS}
	${CC} ${L_OPT} -o regress ${regressOBJS}

install:
	install -s detox ${bindir}
	install detox.1 ${mandir}/man1

clean:
	rm -f *.o core *~ a.out *.core
	rm -f detox
	rm -f regress

devclean: clean
	rm -f *.BAK

distclean: clean
	rm -f config.log config.status
	rm -f Makefile config.h

dummy: 
